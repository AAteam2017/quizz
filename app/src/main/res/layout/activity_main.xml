<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dreamteam.myapplication.MainActivity">

    <TextView
        android:text="PLEASE ENTER YOUR NAME:  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="43dp"
        android:id="@+id/NameString"
        android:layout_alignBottom="@+id/BlankEditName"
        android:layout_alignLeft="@+id/BlankEditName"
        android:layout_alignStart="@+id/BlankEditName"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="56dp"
        android:id="@+id/BlankEditName"
        android:layout_alignRight="@+id/SingleButton"
        android:layout_alignEnd="@+id/SingleButton" />

    <Button
        android:text="Q1. Politics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ButtonQ1"
        android:layout_below="@+id/NameString"
        android:layout_centerHorizontal="true"
        android:textSize="14sp" />

    <Button
        android:text="Q2. Maths"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ButtonQ2"
        android:layout_below="@+id/ButtonQ1"
        android:layout_centerHorizontal="true"
        android:textSize="14sp" />


    <Button
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ButtonRegister"
        android:layout_above="@+id/ButtonQ1"
        android:layout_alignRight="@+id/MultiplayerButton"
        android:layout_alignEnd="@+id/MultiplayerButton" />

    <Button
        android:text="Back to question list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/StartButton"
        android:layout_above="@+id/SkipButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ScoreString"
        android:layout_above="@+id/SolutionString"
        android:layout_centerHorizontal="true"
        android:text="Score" />

    <Button
        android:text="Q3. Economics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ButtonQ3"
        android:textSize="14sp"
        android:layout_below="@+id/ButtonQ2"
        android:layout_alignLeft="@+id/ButtonQ2"
        android:layout_alignStart="@+id/ButtonQ2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SolutionString"
        android:text="Solution"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/buttonB"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="LowerScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/HigherScoreString"
        android:layout_marginTop="6dp"
        android:id="@+id/LowerScoreString"
        android:textSize="20sp"
        android:layout_alignLeft="@+id/HigherScoreString"
        android:layout_alignStart="@+id/HigherScoreString"
        android:layout_alignRight="@+id/HigherScoreString"
        android:layout_alignEnd="@+id/HigherScoreString" />

    <Button
        android:text="TWO PLAYERS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MultiplayerButton"
        android:layout_alignBaseline="@+id/SingleButton"
        android:layout_alignBottom="@+id/SingleButton"
        android:layout_toRightOf="@+id/QuestionString"
        android:layout_toEndOf="@+id/QuestionString" />

    <TextView
        android:text="Click button below to Start your Quiz!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:id="@+id/NameWrongString"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_above="@+id/StartButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Score ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonScore"
        android:layout_above="@+id/NameWrongString"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Q5. Music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ButtonQ5"
        android:textSize="14sp"
        android:layout_below="@+id/ButtonQ4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Higher Score:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/HigherScoreString"
        android:textSize="20sp"
        android:layout_above="@+id/ButtonQ4"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Q4. Pop Culture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ButtonQ4"
        android:textSize="14sp"
        android:layout_below="@+id/ButtonQ3"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Ans A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonA"
        android:textSize="14sp"
        android:layout_below="@+id/ButtonQ5"
        android:layout_toLeftOf="@+id/StartButton"
        android:layout_toStartOf="@+id/StartButton" />

    <Button
        android:text="Ans B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonB"
        android:layout_below="@+id/ButtonQ5"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Ans C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonC"
        android:layout_alignBaseline="@+id/buttonB"
        android:layout_alignBottom="@+id/buttonB"
        android:layout_toRightOf="@+id/StartButton"
        android:layout_toEndOf="@+id/StartButton" />

    <Button
        android:text="Play Again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/StartButton"
        android:layout_alignRight="@+id/ButtonQ3"
        android:layout_alignEnd="@+id/ButtonQ3"
        android:id="@+id/button_Redo" />

    <Button
        android:text="SCORE TABLE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NameWrongString"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/BUTTONScoreSingle" />

    <TextView
        android:text="Let's begin the AAteam Quiz!!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/WelcomeString"
        android:textStyle="normal|bold|italic"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Single Player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SingleButton"
        android:layout_alignBaseline="@+id/LowerScoreString"
        android:layout_alignBottom="@+id/LowerScoreString"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Answer all "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/QuestionString"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/BlankEditName"
        android:layout_alignBottom="@+id/BlankEditName"
        android:layout_alignLeft="@+id/ButtonQ5"
        android:layout_alignStart="@+id/ButtonQ5" />

    <Button
        android:text="Skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SkipButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/HintButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Next Player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NextPlayerButton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/buttonC"
        android:layout_alignEnd="@+id/buttonC" />


</RelativeLayout>


